{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "assets": [
          "views/emails/**/*"
        ],
        "watchAssets": true
      }
    },
    "balance-monitor": {
      "type": "application",
      "root": "apps/balance-monitor",
      "entryFile": "main",
      "sourceRoot": "apps/balance-monitor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/balance-monitor/tsconfig.app.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "invoice-consumer": {
      "type": "application",
      "root": "apps/invoice-consumer",
      "entryFile": "main",
      "sourceRoot": "apps/invoice-consumer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/invoice-consumer/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "transaction-consumer": {
      "type": "application",
      "root": "apps/transaction-consumer",
      "entryFile": "main",
      "sourceRoot": "apps/transaction-consumer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transaction-consumer/tsconfig.app.json"
      }
    },
    "transaction-producer": {
      "type": "application",
      "root": "apps/transaction-producer",
      "entryFile": "main",
      "sourceRoot": "apps/transaction-producer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transaction-producer/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/api"
}